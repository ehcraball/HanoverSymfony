{% extends 'base.html.twig' %}

{% block body %}
    <form class="form-content" method="post" action="{{ path('contact') }}">
        <div class="bg-white p-5 contact-form">
            <div class="form-group">
                {{ form_start(our_form) }}
                {{ form_row(our_form.fullName, {'attr': {'class': 'form-control' }}
                ) }}
       
            </div>
            <div class="form-group">
                {{ form_row(our_form.email, {'attr': {'class': 'form-control' }}
                ) }}
                 
            </div>
            <div class="form-group">
                {{ form_row(our_form.message, {'attr': {'class': 'form-control' }}
                ) }}
                      
            </div>

            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-outline-danger mt-4 py-3 px-5"></div>
                {{ form_end(our_form) }}
            </div>

        </div>
    </form>
{% endblock %}
